{
  "name": "animeclient",
  "productname": "animeclient",
  "version": "2.0.2",
  "main": "index.js",
  "repository": "https://github.com/zvbt/animeclient",
  "description": "An application that brings together several anime streaming platforms vostfr/vf sub/dub ",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "win": "electron-builder --x64",
    "linux": "electron-builder --linux",
    "mac": "electron-builder --macos"
  },
  "author": "zvbt",
  "license": "MIT",
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.26.12",
    "cross-fetch": "^4.0.0",
    "discord-rich-presence": "^0.0.8",
    "infinite-loop": "^0.2.2",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.1",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.zvbt.animeclient",
    "productName": "AnimeClient",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "settings.js",
      "discord.js",
      "build/**"
    ],
    "asarUnpack": [
      "locales/**"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/logo.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/logo.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/logo.png"
    }
  }
}