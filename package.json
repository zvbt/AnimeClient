{
  "private": true,
  "name": "animeclient",
  "productname": "animeclient",
  "description": "An application that brings together several anime streaming platforms vostfr/vf sub/dub",
  "version": "2.0.4",
  "author": "zvbt",
  "license": "MIT",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "win": "electron-builder --x64 ",
    "linux": "electron-builder --linux ",
    "mac": "electron-builder --macos "
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.27.2",
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.2.3",
    "@radix-ui/react-icons": "^1.3.0",
    "@types/mdx": "^2.0.13",
    "cross-fetch": "^4.0.0",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.8",
    "next-mdx-remote": "^4.4.1"
  },
  "devDependencies": {
    "@catppuccin/tailwindcss": "^0.1.6",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "autoprefixer": "^10.4.19",
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3",
    "next": "^13.5.6",
    "nextron": "^8.15.0",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.zvbt.animeclient",
    "productName": "AnimeClient",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "settings.js",
      "discord.js",
      "build/**"
    ],
    "asarUnpack": [
      "locales/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/logo.ico",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/logo.png",
      "publish": [
        "github"
      ]
    }
  }
}
