{
  "name": "animeclient",
  "productname": "animeclient",
  "version": "2.0.3",
  "main": "index.js",
  "repository": "https://github.com/zvbt/animeclient",
  "description": "An application that brings together several anime streaming platforms vostfr/vf sub/dub ",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "win": "electron-builder --x64 --publish always",
    "linux": "electron-builder --linux --publish always",
    "mac": "electron-builder --macos --publish always"
  },
  "author": "zvbt",
  "license": "MIT",
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.26.15",
    "cross-fetch": "^4.0.0",
    "discord-rich-presence": "^0.0.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "infinite-loop": "^0.2.2"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.zvbt.animeclient",
    "productName": "AnimeClient",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "settings.js",
      "discord.js",
      "build/**"
    ],
    "asarUnpack": [
      "locales/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/logo.ico",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/logo.png",
      "publish": [
        "github"
      ]
  }
}
}