{
  "name": "animeclient",
  "productname": "animeclient",
  "version": "2.0.7",
  "main": "index.js",
  "repository": "https://github.com/zvbt/animeclient",
  "description": "An application that brings together several anime streaming platforms vostfr/vf sub/dub ",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "win": "electron-builder --x64 --publish always",
    "linux": "electron-builder --linux --publish always",
    "mac": "electron-builder --macos --publish always"
  },
  "author": "zvbt",
  "license": "MIT",
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.28.2",
    "cross-fetch": "^4.0.0",
    "discord-rich-presence": "^0.0.8",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.zvbt.animeclient",
    "productName": "AnimeClient",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "settings.js",
      "discord.js",
      "build/**"
    ],
    "asarUnpack": [
      "locales/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/logo.ico",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/logo.png",
      "publish": [
        "github"
      ]
    }
  }
}
